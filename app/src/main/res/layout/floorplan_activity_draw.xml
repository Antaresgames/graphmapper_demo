<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:surfaceview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GraphmapperActivity"
    android:id="@+id/draw_frame_layout">

    <TextView
        android:id="@+id/draw_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/draw_button_left"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/restart_button"
            android:layout_gravity="start"
            android:text="Restart App"
            android:textSize="16sp"
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/draw_button"
            android:layout_gravity="start"
            android:text="Draw Plan"
            android:textSize="16sp"
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="80dp" />

        <Button
            android:id="@+id/name_button"
            android:layout_gravity="start"
            android:text="Show Names"
            android:textSize="16sp"
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/length_button"
            android:layout_gravity="start"
            android:text="Hide Length"
            android:textSize="16sp"
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/poi_button"
            android:layout_gravity="start"
            android:text="Hide POIs"
            android:textSize="16sp"
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/obstacle_button"
            android:layout_gravity="start"
            android:text="Show Obst."
            android:textSize="16sp"
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/draw_button_right"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/save_button"
            android:layout_gravity="end"
            android:text="Save as JPG"
            android:textSize="16sp"
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/destroy_button"
            android:layout_gravity="end"
            android:text="Destroy"
            android:textSize="16sp"
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/select_button"
            android:layout_gravity="end"
            android:text="Select Hallway"
            android:textSize="16sp"
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="210dp"/>

        <Button
            android:id="@+id/position_button"
            android:layout_gravity="end|bottom"
            android:text="Show position"
            android:textSize="16sp"
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>


</FrameLayout>
